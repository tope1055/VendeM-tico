    <!-- Payment Modal -->
    <div id="paymentModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closePaymentModal()">&times;</span>
            <h2 style="color: #FF6B6B; font-family: 'Montserrat', sans-serif;">Selecciona tu método de pago</h2>
            <p style="font-size: 1.2rem; margin: 1rem 0;">Paquete seleccionado: <span id="selectedPackage" style="font-weight: bold; color: #FF6B6B;"></span></p>
            <div class="payment-options">
                <div class="payment-option" onclick="handlePayment('card')">
                    <i class="fas fa-credit-card"></i>
                    <div>Tarjeta de crédito/débito</div>
                </div>
                <div class="payment-option" onclick="handlePayment('mercadopago')">
                    <svg class="mercadopago-logo-modal" viewBox="0 0 24 24" fill="#009EE3">
                        <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22.5C6.285 22.5 1.5 17.715 1.5 12S6.285 1.5 12 1.5 22.5 6.285 22.5 12 17.715 22.5 12 22.5z"/>
                        <path d="M12 4.5c-4.136 0-7.5 3.364-7.5 7.5s3.364 7.5 7.5 7.5 7.5-3.364 7.5-7.5-3.364-7.5-7.5-7.5zm0 12c-2.481 0-4.5-2.019-4.5-4.5s2.019-4.5 4.5-4.5 4.5 2.019 4.5 4.5-2.019 4.5-4.5 4.5z"/>
