    <script>
        // Tasa de cambio: 1 USD = 1260 ARS
        const exchangeRate = 1260;

        // Función para convertir precios a pesos argentinos
        function convertToARS(usdPrice) {
            return Math.round(usdPrice * exchangeRate).toLocaleString('es-AR');
        }

        // Actualizar precios en la página
        function updatePrices() {
            // Precios en USD
            const basicPriceUSD = 497;
            const professionalPriceUSD = 997;
            const premiumPriceUSD = 2497;

            // Convertir a ARS
            const basicPriceARS = convertToARS(basicPriceUSD);
            const professionalPriceARS = convertToARS(professionalPriceUSD);
            const premiumPriceARS = convertToARS(premiumPriceUSD);

            // Actualizar elementos HTML
            document.getElementById('basic-price-ar').textContent = `$${basicPriceARS} ARS/mes`;
            document.getElementById('professional-price-ar').textContent = `$${professionalPriceARS} ARS/mes`;
            document.getElementById('premium-price-ar').textContent = `Desde $${premiumPriceARS} ARS/mes`;

            // Mostrar precios en ARS si el usuario está en Argentina
            if (isUserFromArgentina()) {
                document.getElementById('basic-price-usd').style.display = 'none';
                document.getElementById('basic-price-ar').style.display = 'block';
                document.getElementById('professional-price-usd').style.display = 'none';
                document.getElementById('professional-price-ar').style.display = 'block';
                document.getElementById('premium-price-usd').style.display = 'none';
                document.getElementById('premium-price-ar').style.display = 'block';
            }
        }

        // Función para detectar si el usuario está en Argentina (simulación)
        function isUserFromArgentina() {
            // En una implementación real, podrías usar una API de geolocalización
            // Por ahora, simulamos que el usuario está en Argentina
            return true; // Cambiar a false para mostrar precios en USD
        }

        // Modal functions
        function openPaymentModal(packageName) {
            document.getElementById('selectedPackage').textContent = packageName;
            document.getElementById('paymentModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Handle payment selection
        function handlePayment(method) {
            const selectedPackage = document.getElementById('selectedPackage').textContent;
            
            if (selectedPackage === 'Básico' && method === 'mercadopago') {
                // Redirigir al link de MercadoPago para el plan básico
                window.open('https://mpago.la/2BdCreC', '_blank');
            } else {
                // Para otros métodos o paquetes, mostrar alerta
                let methodName = window.open('https://link.mercadopago.com.ar/tskr', '_blank');'';
                switch(method) {

                    case 'card':
                        methodName = 'Tarjeta de crédito/débito';
                        window.open('https://link.mercadopago.com.ar/tskr', '_blank');
                        break;
                    case 'mercadopago':
                        methodName = 'MercadoPago';
                      window.open('https://link.mercadopago.com.ar/tskr', '_blank');
                        break;
                    case 'transfer':
                        methodName = 'Transferencia bancaria';
                        window.open('https://link.mercadopago.com.ar/tskr', '_blank');
                        break;
                }
                alert(`Redirigiendo al pago con ${methodName} para el paquete ${selectedPackage}...`);
            }
            
            closePaymentModal();
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('paymentModal');
            if (event.target == modal) {
                closePaymentModal();
            }
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Scroll animation
        function animateOnScroll() {
            const elements = document.querySelectorAll('.animate-on-scroll');
            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.3;
                
                if (elementPosition < screenPosition) {
                    element.classList.add('visible');
                }
            });
        }

        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', function() {
            animateOnScroll();
            updatePrices();
        });
    </script>
</body>
</html>
```